{
  "name": "primo",
  "version": "0.0.0",
  "description": "Primo Design System - mono-repo root package.json, used mainly to execute setup/build scripts. This package is not published.",
  "main": "index.js",
  "author": "Richard McCartney <richard@mccartney.io>",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/primodesignsystem/primo.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --parallel",
    "build:ci": "lerna run build.ci --parallel",
    "build:components": "lerna run --scope \"@primo/components\" build",
    "build:react": "lerna run --scope \"@primo/react*\" build",
    "build:styles": "lerna run --scope \"@primo/styles*\" build",
    "build:tokens": "lerna run --scope \"@primo/tokens*\" build",
    "build:watch": "lerna run build:watch --parallel",
    "clean": "lerna clean",
    "create:component": "hygen component new",
    "format": "lerna run format && lerna run format:prettier",
    "format:fix": "lerna run format:fix && lerna run format:prettier:fix",
    "format:prettier": "yarn prettier --check './**/*.{css,html,js,json,ts,tsx,scss}'",
    "format:prettier:fix": "yarn prettier --write './**/*.{css,html,js,json,ts,tsx,scss}' ",
    "lint": "lerna run lint && yarn lint:es",
    "lint:fix": "lerna run lint:fix && lerna run lint:es:fix",
    "lint:es": "eslint .",
    "lint:es:ci": "eslint . --max-warnings 0",
    "release": "multi-semantic-release",
    "release:dryrun": "yarn release --dry-run",
    "start:storybook": "lerna run start:storybook --parallel",
    "start:storybook:components": "lerna run --scope \"@primo/components*\" start:storybook",
    "start:storybook:react": "lerna run --scope \"@primo/react*\" start:storybook",
    "start:storybook:styles": "lerna run --scope \"@primo/styles*\" start:storybook",
    "setup": "lerna exec yarn install",
    "test": "lerna run test --parallel", 
    "test:update-snapshots": "lerna run test:update-snapshots --parallel"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@primo/browserlist-config": "^1.0.0",
    "@primo/eslint-config": "^1.0.0",
    "@primo/prettier-config": "^1.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.7",
    "@semantic-release/npm": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "axe-core": "^3.5.5",
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.1.2",
    "commitlint": "^11.0.0",
    "chromatic": "^6.11.4",
    "cz-conventional-changelog": "^3.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^7.12.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "find-git-root": "^1.0.4",
    "husky": "^4.2.5",
    "hygen": "^6.0.4",
    "jest": "^26.1.0",
    "lerna": "^6.0.3",
    "lint-staged": "^10.2.11",
    "prettier": "^2.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "stylelint": "^13.6.1",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "actions/*",
      "config/*"
    ],
    "nohoist": []
  },
  "engines": {
    "node": ">= 12"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "@primo/eslint-config"
    ]
  },
  "commitlint": {
    "extends": [
      "@primo/commitlint-config"
    ]
  }
}
