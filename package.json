{
  "name": "primo",
  "version": "0.0.0",
  "description": "Primo Design System - mono-repo root package.json, used mainly to execute setup/build scripts. This package is not published.",
  "main": "index.js",
  "author": "Richard McCartney <richard@mccartney.io>",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/primodesignsystem/primo.git"
  },
  "scripts": {
    "format.js": "prettier --write \"**/*.{js,ts,tsx}\"",
    "lint.js": "eslint . --ext ts --ext tsx --ext js",
    "setup": "lerna exec yarn install",
    "build": "lerna run build --parallel",
    "build.ci": "lerna run build.ci --parallel",
    "bootsrap": "lerna boostrap",
    "clean": "lerna clean",
    "publish": "lerna exec --concurrency 1 \"npx --no-install semantic-release -e semantic-release-monorepo\" && node -e \"require('semantic-release-monorepo-hooks').hookAfterAll()\""
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@primo/eslint-config": "0.0.0",
    "@primo/prettier-config": "0.0.0",
    "@semantic-release/changelog": "^3.0.1",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "7.0.5",
    "@semantic-release/github": "5.2.1",
    "@semantic-release/npm": "5.0.5",
    "@semantic-release/release-notes-generator": "7.1.2",
    "axe-core": "^3.5.5",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "multi-semantic-release": "^2.4.5",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "semantic-release": "^17.0.1",
    "semantic-release-commit-filter": "^1.0.2",
    "semantic-release-monorepo": "^6.1.1",
    "semantic-release-monorepo-hooks": "^2.9.5",
    "semantic-release-plugin-decorators": "^2.0.0",
    "stylelint": "^13.6.1",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branches": [
      "main",
      "next"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "actions/*",
      "config/*"
    ],
    "nohoist": []
  },
  "engines": {
    "node": ">= 12"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "@primo/eslint-config"
    ]
  }
}
